{
    "compilerOptions": {
      "target": "es2015",
      "moduleResolution": "node",
      "module": "commonjs",                     
      "lib": ["es6", "dom"],
      "noImplicitAny": true,                    
      "esModuleInterop": true,
      "resolveJsonModule": true,         
      "skipLibCheck": true,             
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
    },
    "include": [
      "packages/ga-check-dependencies",
      "packages/ga-monorepolyser",
      "packages/ga-impact-analysis",
      "packages/ga-utils",
      "packages/dependencies",
      "packages/analyser"
    ]
  }